#!/bin/sh
#
# Triggers the gpio setup script which reconfigures the GPIO pin modes.

SETUP_SCRIPT="/usr/bin/gpio_setup.sh"

case "$1" in
    start)
        echo -n "Running gpio setup script"
        $GPIO_SCRIPT && echo "OK" || (echo "FAIL"; exit 1)
        ;;
    *)
        echo "Usage: $0 {start}"
        ;;
esac

exit 0
